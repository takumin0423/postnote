		"db:status": "supabase status",
		"db:migrate": "drizzle-kit migrate"
	},
	"dependencies": {
		"@opennextjs/cloudflare": "^1.5.1",
		"dotenv": "^17.2.0",
		"drizzle-orm": "^0.44.2",
		"next": "15.3.5",
		"postgres": "^3.4.7",
		"react": "^19.0.0",
		"react-dom": "^19.0.0"
	},
	"devDependencies": {
		"@tailwindcss/postcss": "^4",
		"@types/node": "^24.0.13",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"drizzle-kit": "^0.31.4",
		"supabase": "^2.30.4",
		"tailwindcss": "^4",
		"typescript": "^5",
		"wrangler": "^4.24.3"
	},
	"packageManager": "pnpm@10.13.0"
